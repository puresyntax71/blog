{
    "title": "{{ .Title }}",
    "date": "{{ .Date }}",
    "permalink" : "{{ .Permalink }}",
    {{ if .Params.image }}
        {{ $page := . }}
        {{ with .Site.GetPage "section" "covers" }}
            {{ with .Resources.GetMatch (strings.TrimPrefix "/covers/" $page.Params.image ) }}
                {{ $extraSmall := .Resize "768x" }}
                "image": "{{ $extraSmall.RelPermalink }}",
            {{ end }}
        {{ end }}
    {{ else }}
        "image": "",
    {{ end }}
    "summary" : "{{ .Summary }}"
}
